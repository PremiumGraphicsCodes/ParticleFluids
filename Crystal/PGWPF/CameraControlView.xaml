<UserControl x:Class="PG.CGStudio.CameraControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.CGStudio"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:CameraControlViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <Button Content="XY" Command="{Binding XYCommand}"/>
        <Button Content="YZ" Command="{Binding YZCommand}"/>
        <Button Content="ZX" Command="{Binding ZXCommand}"/>
        <Button Content="XYZ" Command="{Binding XYZCommand}"/>
        <Button Content="Fit" Command="{Binding FitCommand}"/>
    </StackPanel>
</UserControl>
