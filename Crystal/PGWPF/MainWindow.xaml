<Window x:Class="PG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PG"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <local:Canvas3dView />
        <Button Content="Sphere" Command="{Binding SphereGenerationCommand}" HorizontalAlignment="Left" Margin="618,43,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Box" Command="{Binding BoxGenerationCommand}" HorizontalAlignment="Left" Margin="618,83,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Cylinder" Command="{Binding CylinderGenerationCommand}" HorizontalAlignment="Left" Margin="618,123,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
