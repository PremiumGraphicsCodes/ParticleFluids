<UserControl x:Class="PG.Control.Cylinder3dView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.Control"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:Cylinder3dViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <Label Content="Center"/>
        <local:Vector3dView DataContext="{Binding CenterViewModel}"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Radius" Width="50"/>
            <TextBox DataContext="{Binding Radius.Value}" Width="50"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Height" Width="50"/>
            <TextBox DataContext="{Binding Height.Value}" Width="50"/>
        </StackPanel>
    </StackPanel>
</UserControl>
