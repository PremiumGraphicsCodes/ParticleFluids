<UserControl x:Class="PG.Control.Math.Circle3dView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.Control.Math"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:Circle3dViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Center"/>
            <local:Vector3dView DataContext="{Binding CenterViewModel}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="UVec"/>
            <local:Vector3dView DataContext="{Binding UVecViewModel}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="VVec"/>
            <local:Vector3dView DataContext="{Binding VVecViewModel}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
