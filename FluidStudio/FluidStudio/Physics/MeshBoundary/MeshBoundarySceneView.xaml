<UserControl x:Class="FluidStudio.Physics.MeshBoundary.MeshBoundarySceneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FluidStudio.Physics.MeshBoundary"
             mc:Ignorable="d"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Name"/>
            <TextBox Text="{Binding Name.Value}" IsReadOnly="True" MinWidth="50"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="MeshFile" Command="{Binding MeshFileSelectCommand}"/>
            <TextBox Text="{Binding MeshFilePath.Value}" IsReadOnly="True" MinWidth="100"/>
        </StackPanel>
        <Button Content="Update" Command="{Binding UpdateCommand}"/>
    </StackPanel>
</UserControl>
