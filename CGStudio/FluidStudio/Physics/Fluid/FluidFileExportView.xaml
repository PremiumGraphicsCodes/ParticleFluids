<UserControl x:Class="FluidStudio.Physics.Fluid.FluidFileExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FluidStudio.Physics.Fluid"
             mc:Ignorable="d">
    <StackPanel>
        <CheckBox Content="VDBExport" IsChecked="{Binding DoExportVDB.Value}"/>
        <TextBlock Text = "Directory" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Select" Command="{Binding VDBExportDirectorySelectCommand}"/>
            <TextBox Text = "{Binding VDBExportDirectoryPath.Value}" MinWidth="100"/>
        </StackPanel>
        <CheckBox Content="MakeMesh" IsChecked="{Binding DoMakeMesh.Value}"/>
        <CheckBox Content="OBJExport" IsChecked="{Binding DoExportOBJ.Value}"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Select" Command="{Binding OBJExportDirectorySelectCommand}"/>
            <TextBox Text = "{Binding OBJExportDirectoryPath.Value}" MinWidth="100"/>
        </StackPanel>
    </StackPanel>
</UserControl>
