<UserControl x:Class="PG.CGStudio.Scene.Shape.PolygonMesh.Generation.TorusGenerationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.CGStudio.Scene.Shape.PolygonMesh.Generation"
             xmlns:math="clr-namespace:PG.Control.Math;assembly=PGControl"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <StackPanel>
        <math:Torus3dView DataContext="{Binding TorusViewModel}"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="UNum"/>
            <TextBox Text="{Binding UNum.Value}" MinWidth="50"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="VNum"/>
            <TextBox Text="{Binding VNum.Value}" MinWidth="50"/>
        </StackPanel>
        <Button Content="Generate" Command="{Binding GenerationCommand}"/>
    </StackPanel>
</UserControl>
