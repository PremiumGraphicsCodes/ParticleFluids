<UserControl x:Class="PG.CGStudio.Scene.Shape.Transform.Scale.ScaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.CGStudio.Scene.Shape.Transform.Scale"
             xmlns:select="clr-namespace:PG.CGStudio.Object.Select"
             xmlns:math="clr-namespace:PG.Control.Math;assembly=PGControl"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:ScaleViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <TextBlock Text="{Binding ShapeId.Value}"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Scale"/>
            <math:Vector3dView DataContext="{Binding RatioViewModel}" KeyDown="Vector3dView_KeyDown"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Center"/>
            <math:Vector3dView DataContext="{Binding CenterViewModel}" KeyDown="Vector3dView_KeyDown"/>
        </StackPanel>
        <Button Content="OK" Command="{Binding OkCommand}"/>
        <Button Content="Cancel" Command="{Binding CancelCommand}"/>
    </StackPanel>
</UserControl>
