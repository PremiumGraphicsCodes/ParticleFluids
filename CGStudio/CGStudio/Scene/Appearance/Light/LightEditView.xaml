<UserControl x:Class="PG.CGStudio.Light.LightEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.CGStudio.Light"
             xmlns:graphics="clr-namespace:PG.Control.Graphics;assembly=PGControl"
             mc:Ignorable="d" 
             d:DesignWidth="300">
    <UserControl.DataContext>
        <local:LightEditViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <TextBlock Text="Id"/>
        <TextBlock Text="{Binding Id.Value}"/>
        <TextBlock Text="Name"/>
        <TextBox Text="{Binding Name.Value}"/>
        <graphics:PointLightView DataContext="{Binding PointLightViewModel}"/>
        <Button Content="OK" Command="{Binding OKCommand}"/>
    </StackPanel>
</UserControl>
