<UserControl x:Class="PG.CGStudio.Scene.Appearance.Texture.TextureAddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.CGStudio.Scene.Appearance.Texture"
             xmlns:graphics="clr-namespace:PG.Control.Graphics;assembly=PGControl"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:TextureAddViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <TextBlock Text="{Binding Id.Value}"/>
        <TextBox Text="{Binding Name.Value}"/>
        <graphics:TextureView DataContext="{Binding TextureViewModel}"/>
        <Button Content="OK" Command="{Binding OKCommand}"/>
    </StackPanel>
</UserControl>
