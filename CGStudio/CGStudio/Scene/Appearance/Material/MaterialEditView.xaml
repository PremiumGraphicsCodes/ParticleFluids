<UserControl x:Class="PG.CGStudio.Material.MaterialEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.CGStudio.Material"
             xmlns:graphics="clr-namespace:PG.Control.Graphics;assembly=PGControl"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             >
    <StackPanel>
        <TextBlock Text="{Binding Id.Value}"/>
        <TextBox Text="{Binding Name.Value}"/>
        <graphics:MaterialView DataContext="{Binding MaterialViewModel}"/>
        <Button Content="OK" Command="{Binding OKCommand}"/>
    </StackPanel>
</UserControl>
