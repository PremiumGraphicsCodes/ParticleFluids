<UserControl x:Class="PG.CGStudio.Object.Transform.TransformView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PG.CGStudio.Object.Transform"
        xmlns:select="clr-namespace:PG.CGStudio.Object.Select"
        mc:Ignorable="d">
    <UserControl.DataContext>
        <local:TransformViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <select:SelectView DataContext="{Binding SelectViewModel}"/>
        <Button Content="Move" Command="{Binding MoveCommand}"/>
        <Button Content="Scale" Command="{Binding ScaleCommand}"/>
        <Button Content="Rotate" Command="{Binding RotateCommand}"/>
    </StackPanel>
</UserControl>
