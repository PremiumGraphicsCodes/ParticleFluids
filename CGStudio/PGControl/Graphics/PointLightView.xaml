<UserControl x:Class="PG.Control.Graphics.PointLightView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.Control.Graphics"
             xmlns:control="clr-namespace:PG.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <StackPanel>
        <control:Vector3dView DataContext="{Binding PositionViewModel}"/>
        <local:ColorRGBAView DataContext="{Binding AmbientViewModel}"/>
        <local:ColorRGBAView DataContext="{Binding DiffuseViewModel}"/>
        <local:ColorRGBAView DataContext="{Binding SpecularViewModel}"/>
    </StackPanel>
</UserControl>
