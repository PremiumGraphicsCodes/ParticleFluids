<UserControl x:Class="PG.Control.Math.Vector3dView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.Control.Math"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:control="clr-namespace:PG.Control"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <control:TextBoxDouble HorizontalAlignment="Left" Text="{Binding X.Value, StringFormat={}{0:N3}}" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>
        <control:TextBoxDouble HorizontalAlignment="Center" Text="{Binding Y.Value, StringFormat={}{0:N3}}"  Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>
        <control:TextBoxDouble HorizontalAlignment="Right" Text="{Binding Z.Value, StringFormat={}{0:N3}}" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>
    </StackPanel>
</UserControl>
