<UserControl x:Class="PG.Control.Math.Torus3dView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.Control.Math"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:Torus3dViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <local:Vector3dView DataContext="{Binding BottomViewModel}"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="BigRadius"/>
            <TextBox Text="{Binding BigRadius.Value}" Width="50"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="SmallRadius"/>
            <TextBox Text="{Binding SmallRadius.Value}" Width="50"/>
        </StackPanel>
    </StackPanel>
</UserControl>
