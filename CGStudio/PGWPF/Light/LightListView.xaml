<UserControl x:Class="PG.CGStudio.Light.LightListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:PG.CGStudio.Light"
        xmlns:graphics="clr-namespace:PG.Control.Graphics;assembly=PGControl"
        mc:Ignorable="d"
        Width="300">
    <UserControl.DataContext>
        <local:LightListViewModel/>
    </UserControl.DataContext>
    <TreeView ItemsSource="{Binding Items}">
        <!--
        <i:Interaction.Behaviors>
            <local:LightListViewBehavior/>        
        </i:Interaction.Behaviors>
        -->
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate DataType="{x:Type local:LightItem}">
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding IsVisible.Value}"/>
                    <TextBlock Text="{Binding Name.Value}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</UserControl>
