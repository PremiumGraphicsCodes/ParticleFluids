<UserControl x:Class="PG.Control.Math.Cone3dView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PG.Control.Math"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:Cone3dViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <local:Vector3dView DataContext="{Binding BottomViewModel}"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Radius"/>
            <TextBox Text="{Binding Radius.Value}" MinWidth="50"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Height"/>
            <TextBox Text="{Binding Height.Value}" MinWidth="50"/>
        </StackPanel>
    </StackPanel>
</UserControl>
